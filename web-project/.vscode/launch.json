    "version": "0.2.0",
    "configurations": [
        {
            "name": "Serve & Launch Chrome (http.server)",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Start Python HTTP Server"
        },
        {
            "name": "Attach to Running Chrome",
            "type": "pwa-chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        }
    ]
}